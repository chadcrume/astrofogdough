---
import "../styles/lib.css";
import "../styles/global.styl";
import Nav from "@components/Nav.astro";

interface Props {
  frontmatter?: {
    title?: string | undefined;
  };
}
const { frontmatter } = Astro.props;
---

<html lang="en" data-theme="synthwave">
  <head>
    <script is:inline>
      // ‚òùÔ∏è This script prevent the FART effect.
      if (localStorage.getItem("theme") === null) {
        document.documentElement.setAttribute("data-theme", "light");
      } else
        document.documentElement.setAttribute(
          "data-theme",
          localStorage.getItem("theme")
        );
      // "theme" LocalStorage value is set by the package to remember user preference.
      // The value is checked and applyed before rendering anything.
    </script>
    <script>
      import { themeChange } from "theme-change";
      themeChange();
      // üëÜ you could import the CDN directly instead of these two lines
    </script>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{frontmatter?.title} ‚Äî FogDough DeFi template</title>
  </head>
  <body>
    <div class="layout-container">
      <!-- Sticky Header -->
      <header id="site-header">
        <Nav />
      </header>
      <main>
        <h1>{frontmatter?.title}</h1>
        <article>
          <slot />
          <!-- your content is injected here -->
        </article>
      </main>
      <footer>
        <p>Site Footer</p>
      </footer>
    </div>

    <!-- Plain JavaScript for header minimization on scroll -->
    <script type="module">
      /**
       * Listens for scroll events and toggles the 'minimized' class on the header
       * when the scroll position exceeds 100px.
       */
      document.addEventListener("DOMContentLoaded", () => {
        const header = document.getElementById("site-header");
        window.addEventListener("scroll", () => {
          if (window.scrollY > 100) {
            header.classList.add("minimized");
          } else {
            header.classList.remove("minimized");
          }
        });
      });
    </script>
  </body>
</html>
<style is:global></style>
