// Container with CSS Grid: header, main, footer
.layout-container
  display grid
  grid-template-rows auto 1fr auto
  min-height 100vh
  max-width 1600px
  margin 0 auto
  padding 0 10px

// Sticky header styling
header
  position sticky
  top 0
  transition padding 0.3s ease, background-color 0.3s ease
  z-index 100



// Main content styling
main
  padding 20px

// Footer styling that sticks to the bottom
footer
  padding 20px
  text-align left

header, main, footer
  padding 0px 28px

// Responsive breakpoints for mobile devices
@media (max-width: 767px)
  .layout-container
    padding 0 10px
  header, main, footer
    padding 0px 14px

// Responsive breakpoints for tablet devices
@media (min-width: 768px) and (max-width: 1023px)
  .layout-container
    padding 0 10px
  header, main, footer
    padding 0px 28px


