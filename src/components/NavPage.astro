---
import type { INavItem } from "@components/NavItems.ts";
interface Props {
  class?: string | undefined;
  id?: string | undefined;
  page?: INavItem | undefined;
  showTitle?: string | undefined;
}
const { class: addClass, id, page, showTitle }: Props = Astro.props;
---

<section
  id={page && page.name || id}
  class:list={["Xcontainer max-w-196 mx-auto px-4 py-8 text-center", addClass]}
>
<!-- transition:name={page && page.name || id}
   -->
<h1 class:list={[page?.name]}>{showTitle || page?.title}</h1>
  <slot />
</section>
