          </div>
          <ul
            tabindex="0"
            class="menu menu-sm dropdown-content rounded-box z-1 mt-3 w-52 p-2 shadow"
          >
            {navItems.map((i) => (
              <li class={i.name}>
                <a
                  href={i.route}
                  aria-current="page"
                  class:list={[
                    currentParentRoute == i.route ? "current-nav-page" : "",
                  ]}
                >
                  {i.title}
                </a>
              </li>
            ))}
          </ul>
        </div>
    {
