<script>
  const toaster = document.querySelector(".toaster");
  const toast = document.querySelector(".toast");
  if (toaster && toast) {
    toaster.addEventListener("click", (event) => {
      event.preventDefault(); // Prevents default anchor behavior
      toast.classList.remove("hide");
      setTimeout(() => {
        toast.classList.add("hide");
      }, 2000);
    });
  }

  import navItems from "@components/NavItems.ts";

  const commandsArr = [
    "?",
    "h",
    "help",
    "ls",
    "pwd",
    "cd",
    "/",
    ...navItems.map((navItem) => navItem.name),
  ];

  /* 
   * This function is used to create an enum from an array.
   * See the following two lines.
   */
  const createEnumFromArray = <T extends string>(
    array: readonly T[]
  ): { [key in T]: key } => {
    return array.reduce(
      (acc, key) => {
        acc[key] = key;
        return acc;
      },
      {} as { [key in T]: key }
    );
  };

  /* 
   * These two lines together create an enum of the command values.
   * This is useful for validating and processing commands 
   * in the switch statement in executeCommand().
   */
  const CommandsEnum = createEnumFromArray(commandsArr);
  type CommandsEnum = keyof typeof CommandsEnum;

  /*
   * The following is based on generated code from google search
   */
  let currentDirectory = "/";
  const commandInput = document.getElementById("command-input");
  const terminalOutput = document.getElementById("terminal-output");

  function executeCommand(command: string) {
    const [cmd, ...args] = command.split(" ");
    let output = "";

    switch (cmd) {
      case CommandsEnum["?"]:
      case CommandsEnum["h"]:
      case CommandsEnum["help"]:
        output =
          "Usage: &lt;cmd&gt; &lt;options&gt;\n" +
          "Commands:\n\n" +
          " - pwd\n \tShows current directory\n\n" +
          " - ls\n \tLists directory contents (pages)\n\n" +
          " - cd &lt;page&gt;\n \tNavigates to that page.\n\n" +
          " - &lt;page&gt;\n \tNavigates to that page.\n\n";
        break;
      case CommandsEnum["cd"]:
        if (args.length > 0) {
          currentDirectory = args[0];
          output = "Directory changed to " + currentDirectory;
          const navDir = navItems.find((v) => v.name == currentDirectory);
          if (navDir) {
            window.location.href = navDir.route;
          } else if (currentDirectory == "/") {
            window.location.href = "/";
          }
        } else {
          output = "Usage: cd &lt;directory&gt;";
        }
        break;
      case CommandsEnum["pwd"]:
        output = currentDirectory;
        break;
      case CommandsEnum["ls"]:
        output = listFiles(currentDirectory);
        break;
      case CommandsEnum["/"]:
        output = "Opening " + cmd;
        window.location.href = "/";
        break;
      default:
        if (CommandsEnum.hasOwnProperty(cmd)) {
          const navCmd = navItems.find((v) => v.name == CommandsEnum[cmd]);
          if (navCmd) {
            output = "Opening " + cmd;
            window.location.href = navCmd.route;
          } else {
            output = "Command not found: " + cmd;
          }
        }
    }

    if (terminalOutput)
      terminalOutput.innerHTML =
        "<br>&gt; " + command + "<br>" + output + "<br>";
  }

  // Simulate file listing
  function listFiles(directory: string) {
    if (directory === "/") {
      return navItems
        .map((i) => {
          return i.name;
        })
        .join("\n");
    }
    return "No files found in " + directory;
  }

  if (commandInput)
    commandInput.addEventListener("keydown", function (event) {
      if (event.key === "Enter") {
        const command = (commandInput as HTMLInputElement).value;
        executeCommand(command);
        (commandInput as HTMLInputElement).value = "";
        event.preventDefault();
      }
    });
</script>

