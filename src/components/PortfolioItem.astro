---
import type { CollectionEntry } from "astro:content";
interface Props {
  portfolio: CollectionEntry<"portfolios">;
  class?: string | string[];
}
const { portfolio, class: addClass } = Astro.props;
console.log(`portfolio`, portfolio);
---

<div box-="double contain:!top">
  <div class="header">
    <h6>
      {portfolio.data.name}
    </h6>
    <h7>{portfolio.data.status}</h7>
  </div>
  <a href={`/portfolio/${portfolio.id}`} data-astro-prefetch>
    <div class="avatar self-start">
      <div class="mask mask-circle rounded-none">
        <img src={portfolio.data.image} transition:name={portfolio.id} />
      </div>
    </div>
  </a>
</div>

<style>
  @import "@webtui/css/utils/box.css";

  .header {
    display: flex;
    justify-content: space-between;
  }

  span,
  h6,
  h7 {
    background-color: var(--background0);
    padding: 0 1ch;
  }
</style>
