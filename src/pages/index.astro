---
import { Image } from "astro:assets";

import Logo from "@assets/logo/circle5.svg";
import Logo2 from "@assets/logo/circle0.svg";
import Layout from "@layouts/Layout.astro";
import LayoutSection from "@layouts/LayoutSection.astro";
import Text from "@components/Text.astro";
import navItems from "@components/NavItems.ts";
const pageTitle = "home";
---

<Layout>
  <div
    class="col-span-1 gap-0 w-full h-auto m-0 p-0 pt-5 md:pr-5 md:py-10
  text-center lg:text-left justify-items-center"
  >
    <div class="gradient logo-home m-0 w-fit" transition:name="logo">
      <Image
        class="m-0 w-[30vw] md:w-full h-full text-center lg:text-left items-center lg:items-start"
        src={Logo2}
        alt="Fogdough logo"
      />
    </div>
  </div>

  <div
    class="md:col-span-1 lg:col-span-2 h-auto align-middle flex items-center p-0 gap-0"
  >
    <h1 class="text-center md:text-left align-middle m-0 w-full">
      On-chain. <br />Permissionless. <br />Finance reprogrammed.
    </h1>
  </div>

  <LayoutSection type="med-left">
    <Text>
      <p>
        Fogdough elevates chosen founders at the earliest stages. We partner
        directly with entrepreneurs to ideate and refine essential business
        frameworks from conception through product-market fit, backed by fully
        customizable funding arrangements.
      </p>
    </Text>
  </LayoutSection>
  <LayoutSection type="right">
    <Text class:list={['flex flex-col h-full justify-center w-full text-right']}>
      <p class="nx" style="font-size: 7cqw">
        <button class="btn btn-primary" data-nav-target="/portfolio">Our portfolio</button>
      </p>
    </Text>
  </LayoutSection>

